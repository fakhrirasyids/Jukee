<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/jukee_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/jukee_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.Jukee"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".ui.playlistdetail.PlaylistDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Jukee.Purple" />
        <activity
            android:name=".ui.songdetail.SongDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Jukee.Purple" />
        <activity
            android:name=".ui.main.visitor.VisitorMainActivity"
            android:exported="false"
            android:label="@string/title_activity_visitor_main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Jukee.Purple" />
        <activity
            android:name=".ui.main.host.HostMainActivity"
            android:exported="false"
            android:label="@string/title_activity_host_main"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Jukee.Purple" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Jukee.White">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Jukee.Purple" />
    </application>

</manifest>